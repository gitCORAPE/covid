<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:orientation="horizontal"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_theme_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="NOMBRE DEL CONTENIDO"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorTextLabel"
                android:textSize="@dimen/dimenEditText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_author_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:hint="Nombre del Usuario"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorTextLabel"
                android:textSize="@dimen/dimenEditText"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_type_content"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/colorTransparent"
                android:src="@drawable/icon_video"
                android:tint="@color/colorTextLabel" />

            <TextView
                android:id="@+id/txt_type_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="Contenido"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/dimenEditText" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
