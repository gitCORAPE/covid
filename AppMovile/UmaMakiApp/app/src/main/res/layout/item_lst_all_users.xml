<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorTransparent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/img_badge_user"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@drawable/bronze_medal"
                />

            <TextView
                android:id="@+id/txt_badge_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/dimenEditText"
                android:text="Conocedor"
                android:textColor="@color/colorOrange" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_name_user"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:hint="NOMBRE DEL USUARIO"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimenEditText"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/colorTextLabel" />

            <TextView
                android:id="@+id/txt_community_user"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="30dp"
                android:maxLines="1"
                android:hint="Nombre de la comunidad"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimenEditText"
                android:textStyle="italic"
                android:text=""
                android:textColor="@color/colorTextLabel" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
