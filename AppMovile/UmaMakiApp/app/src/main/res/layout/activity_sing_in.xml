<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_grdnt"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:letterSpacing="0.1"
                        android:text="@string/label_title_singin"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextLabel"
                        android:textSize="@dimen/dimenTitleLabel"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/txt_name_singin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_states"
                            android:hint="@string/hint_username"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextEditText"
                            android:textColorHint="@color/colorHintEditText"
                            android:textSize="@dimen/dimenEditText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#4a5a71" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:orientation="horizontal"
                        android:padding="16dp">


                        <AutoCompleteTextView
                            android:id="@+id/txt_community_singin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_states"
                            android:completionThreshold="0"
                            android:dropDownHeight="200dp"
                            android:hint="@string/hint_community"
                            android:padding="10dp"
                            android:popupBackground="@drawable/rounded_edittext"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextEditText"
                            android:textColorHint="@color/colorHintEditText"
                            android:textSize="@dimen/dimenEditText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#4a5a71" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:orientation="horizontal"
                        android:padding="16dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_nationality"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="@color/colorTextButton"
                            android:textSize="@dimen/dimenEditText" />

                        <TextView
                            android:id="@+id/txt_nationality_singin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_select"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dimenEditText"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#4a5a71" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <TextView
                    android:id="@+id/btn_singin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/curved_button_red"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/btn_singin"
                    android:textColor="@color/colorTextButton"
                    android:textSize="@dimen/dimenTitleLabel"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>